{
  "name": "@ssapp-registry/backend",
  "version": "1.0.0",
  "description": "SSApp Registry Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'Backend is ready to run'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "type-check": "echo 'No TypeScript files to check'",
    "clean": "rm -rf node_modules dist coverage",
    "docker:build": "docker build -t ssapp-registry-backend .",
    "docker:run": "docker run -p 8080:8080 ssapp-registry-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose --profile dev up -d"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "ed25519-supercop": "^1.2.0",
    "multibase": "^4.0.6",
    "multiformats": "^12.0.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
