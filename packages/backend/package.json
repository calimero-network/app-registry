{
  "name": "@calimero-network/registry-backend",
  "version": "1.0.0",
  "description": "Calimero Network App Registry Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'Backend is ready to run'",
    "test": "jest --testPathIgnorePatterns=v2-e2e-developer-flow.test.js --testPathIgnorePatterns=v2-e2e-api-flow.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "type-check": "echo 'No TypeScript files to check'",
    "clean": "rm -rf node_modules dist coverage",
    "docker:build": "docker build -f packages/backend/Dockerfile -t calimero-registry-backend .",
    "docker:run": "docker run -p 8080:8080 calimero-registry-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose --profile dev up -d"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@noble/ed25519": "^2.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "fastify": "^4.24.3",
    "lru-cache": "^10.0.0",
    "pino": "^8.16.0",
    "ipfs-http-client": "^60.0.1",
    "js-yaml": "^4.1.0",
    "multibase": "^4.0.6",
    "multiformats": "^12.0.1",
    "node-fetch": "^3.3.2",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
