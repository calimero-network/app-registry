{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/npm",
    "@semantic-release/github"
  ],
  "preset": "conventionalcommits",
  "tagFormat": "lib-v${version}",
  "releaseRules": [
    {
      "type": "fix",
      "scope": "lib",
      "release": "patch"
    },
    {
      "type": "feat",
      "scope": "lib",
      "release": "minor"
    },
    {
      "type": "chore",
      "scope": "lib",
      "release": "patch"
    },
    {
      "type": "docs",
      "scope": "lib",
      "release": "patch"
    }
  ]
}
