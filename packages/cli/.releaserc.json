{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        }
      }
    ],
    "@semantic-release/npm",
    "@semantic-release/github"
  ],
  "preset": "conventionalcommits",
  "tagFormat": "cli-v${version}",
  "releaseRules": [
    {
      "type": "fix",
      "release": "patch"
    },
    {
      "type": "feat",
      "release": "minor"
    },
    {
      "type": "chore",
      "release": "patch"
    },
    {
      "type": "docs",
      "release": "patch"
    }
  ]
}
