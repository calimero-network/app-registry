{
  "name": "ssapp-registry-monorepo",
  "version": "1.0.0",
  "description": "SSApp Registry - Backend Monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter backend dev",
    "build": "pnpm --filter backend build",
    "test": "pnpm --filter backend test",
    "lint": "pnpm --filter backend lint",
    "lint:fix": "pnpm --filter backend lint:fix",
    "clean": "pnpm --recursive clean",
    "docker:build": "pnpm --filter backend docker:build",
    "docker:compose": "pnpm --filter backend docker:compose",
    "docker:compose:dev": "pnpm --filter backend docker:compose:dev",
    "start": "pnpm --filter backend start"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
} 