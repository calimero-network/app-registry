{
  "name": "ssapp-registry-monorepo",
  "version": "1.0.0",
  "description": "SSApp Registry - Backend Monorepo",
  "private": true,
  "scripts": {
    "dev": "PORT=8082 pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:all": "PORT=8082 pnpm --parallel dev",
    "build": "pnpm --recursive build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "test": "pnpm --recursive test",
    "test:backend": "pnpm --filter backend test",
    "test:frontend": "pnpm --filter frontend test",
    "lint": "pnpm --filter backend lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm --filter backend type-check",
    "clean": "pnpm --recursive clean",
    "docker:build": "docker build -f packages/backend/Dockerfile -t ssapp-registry-backend .",
    "docker:compose": "pnpm --filter backend docker:compose",
    "docker:compose:dev": "pnpm --filter backend docker:compose:dev",
    "start": "pnpm --filter backend start",
    "quality": "pnpm format:check && pnpm lint && pnpm test",
    "quality:fix": "pnpm format && pnpm lint:fix"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "lint-staged": {
    "packages/backend/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/frontend/**/*.{ts,tsx}": [
      "pnpm --filter frontend lint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
